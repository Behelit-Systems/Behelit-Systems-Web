---
import '../styles/global.css'
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Import Pathway Gothic One font for the interactive text -->
    <link href="https://fonts.googleapis.com/css2?family=Pathway+Gothic+One&display=swap" rel="stylesheet">
    <style is:global>
      /* Global styles for HTML and Body */
      html, body {
        margin: 0;
        padding: 0;
      }

      /* Styles for the main content area */
      main {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100vh; /* Full viewport height */
        background: rgb(14, 16, 15); /* Dark background color */
      }

      /* Styles for the stage container to fill the main area */
      .stage {
        position: relative; /* Changed to relative to contain absolutely positioned children */
        width: 100%;
        height: 100%;
        font-family: 'Pathway Gothic One', sans-serif; /* Apply Pathway Gothic One font */
        font-size: 120px; /* Base font size for the text */
        overflow: hidden; /* Hide overflow to prevent scrollbars from animation */
      }

      /* All direct children elements within the stage should be absolutely positioned for GSAP control */
      .stage > * {
        position: absolute;
      }

      /* Styling for the film grain overlay */
      .grain {
        width: 100%;
        height: 100%;
        /* External image for grain effect. Consider local hosting for production. */
        background-image: url('https://assets.codepen.io/721952/grain.png');
        mix-blend-mode: overlay; /* Blending mode for the grain effect */
      }

      /* Styling for individual dust particles */
      .d {
        /* External image for dust particles. Consider local hosting for production. */
        background-image: url('https://assets.codepen.io/721952/filmDust.png');
        background-size: 30px 240px; /* Size of the sprite sheet for dust */
      }

      /* Styles for the background layers that will be clipped */
      .bg1, .bg2 {
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
      }
      .bg1 {
        color: #000; /* Color for the first background layer */
        z-index: 1; /* Ensure it's behind the main text */
      }
      .bg2 {
        color: #fff; /* Color for the second background layer */
        z-index: 2; /* Ensure it's behind the main text but above bg1 */
      }
      /* Ensure text in .word and its clones is not selectable */
      .word, .clone {
        user-select: none;
      }
    </style>
  </head>
  <!-- Body styling: min-height and overflow-hidden, background handled by main -->
  <body class="min-h-screen overflow-hidden">
    <slot />
  </body>
</html>

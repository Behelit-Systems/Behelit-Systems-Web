---
// This component creates a consistent layout for sections on the homepage.
// It takes a `title` and uses a grid to align the title with the content.
interface Props {
    title: string;
}
const { title } = Astro.props;
---
<section class="py-16 md:py-20">
    <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="md:col-span-1">
            <h2 class="text-sm uppercase text-gray-500 font-bold">{title} /</h2>
        </div>
        <div class="md:col-span-2">
            <!-- The main content for the section goes here -->
            <slot />
        </div>
    </div>
</section>
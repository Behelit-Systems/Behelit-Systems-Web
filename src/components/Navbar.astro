---
const navLinks = [
    { href: "/about", text: "About" },
    { href: "/services", text: "Services" },
    { href: "/community", text: "Community" },
    { href: "/contact", text: "Contact" },
];
---
<header class="fixed top-0 left-0 w-full z-50 p-6 md:p-8" transition:persist>
    <div class="container mx-auto">
        <nav class="flex justify-between items-center">
            <a href="/" class="text-base font-bold uppercase tracking-widest hover:text-gray-500">
                Behelit Systems
            </a>
            <div class="hidden md:flex items-center space-x-8">
                {navLinks.map(link => (
                    <a href={link.href} class="text-sm font-medium uppercase tracking-wider hover:text-gray-500 transition-colors">
                        {link.text}
                    </a>
                ))}
            </div>
            <button id="mobile-menu-button" class="md:hidden p-2">
                 <svg class="w-6 h-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor"><path d="M4 6h16M4 12h16M4 18h16"></path></svg>
            </button>
        </nav>
    </div>
     <div id="mobile-menu" class="hidden md:hidden bg-[#F3F3F3] mt-4">
        <div class="px-6 pt-2 pb-4 flex flex-col items-start space-y-4">
            {navLinks.map(link => (
                <a href={link.href} class="block text-lg font-medium uppercase tracking-wider hover:text-gray-500 transition-colors py-2">{link.text}</a>
            ))}
        </div>
    </div>
</header>
<script>
    document.addEventListener('astro:page-load', () => {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', () => mobileMenu.classList.toggle('hidden'));
        }
    });
</script>
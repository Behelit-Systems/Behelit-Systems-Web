<form class="space-y-6">
    <div>
        <label for="name" class="block text-sm font-medium text-gray-700">Full Name</label>
        <input type="text" name="name" id="name" autocomplete="name" class="mt-1 block w-full px-3 py-2 bg-transparent border-b border-gray-400 focus:outline-none focus:border-black">
    </div>
    <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
        <input type="email" name="email" id="email" autocomplete="email" class="mt-1 block w-full px-3 py-2 bg-transparent border-b border-gray-400 focus:outline-none focus:border-black">
    </div>
    <div>
        <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
        <textarea id="message" name="message" rows="4" class="mt-1 block w-full px-3 py-2 bg-transparent border-b border-gray-400 focus:outline-none focus:border-black"></textarea>
    </div>
    <div>
        <button type="submit" class="w-full flex justify-center py-3 px-4 border border-black rounded-full text-sm font-bold text-black bg-transparent hover:bg-black hover:text-white transition-colors uppercase">
            Send Message
        </button>
    </div>
</form>
<script>
    document.addEventListener('astro:page-load', () => {
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', (e) => {
                e.preventDefault();
                const button = form.querySelector('button');
                if (button) {
                    button.textContent = 'Thank you!';
                    setTimeout(() => { button.textContent = 'Send Message'; }, 3000);
                }
            });
        }
    });
</script>
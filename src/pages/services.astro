---
import BaseLayout from '@layouts/BaseLayout.astro';
import Content from '@components/Content.astro';
const services = [
    { title: "Full-Spectrum Hardware Security", description: "In-depth analysis of embedded systems, firmware reverse engineering, wireless protocol exploitation, and supply chain security to protect your hardware from the ground up." },
    { title: "Aggressive Physical Penetration Testing", description: "We go beyond checklists to simulate real-world intrusion attempts, testing physical access controls, facility security, and environmental defenses to their limits." },
    { title: "Advanced Social Engineering & Countermeasures", description: "Targeted phishing, vishing, and smishing campaigns combined with human vulnerability assessments. We also conduct scambaiting operations against threats like Pig Butchering Scams." },
    { title: "Robust Blue Team Defense", description: "We build and harden your defenses. Our services include SIEM optimization, EDR implementation, proactive threat hunting, and incident response plan development." },
    { title: "Specialized Security Training", description: "Customized workshops for your team on hardware hacking, social engineering, and defensive techniques. We also cultivate talent through the Cult of the LOLCOW." }
];
---
<BaseLayout 
    title="Services"
    description="Explore our specialized security services.">
    <Content>
        <div class="max-w-5xl mx-auto pt-20">
            <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-12">Services</h1>
             <div class="border-t border-gray-300">
                {services.map((service, index) => (
                    <div class="border-b border-gray-300 py-8">
                        <div class="grid md:grid-cols-3 gap-4">
                            <div class="md:col-span-1">
                                <h3 class="text-xl font-bold">{service.title}</h3>
                            </div>
                             <div class="md:col-span-2">
                                <p class="text-gray-600">{service.description}</p>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </Content>
</BaseLayout>
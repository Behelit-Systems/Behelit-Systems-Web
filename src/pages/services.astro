---
import BaseLayout from '@layouts/BaseLayout.astro';
import Content from '@components/Content.astro';
const servicePackages = [
    { title: "Package 1: Baseline Resilience Assessment", description: "A fixed-fee, introductory engagement including non-invasive physical review, OSINT, and a baseline phishing campaign." },
    { title: "Package 2: Adversarial Simulation Engagement", description: "Our core, project-based offering including aggressive physical penetration testing, hardware teardown, and multi-vector social engineering." },
    { title: "Package 3: Resilience Partnership Program", description: "A retainer-based program for long-term clients, including everything in the Adversarial Simulation plus ongoing blue team consulting, threat hunting, and quarterly security drills." }
];
---
<BaseLayout 
    title="Services"
    description="Explore our specialized security services.">
    <Content>
        <div class="max-w-5xl mx-auto pt-28 md:pt-40">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center mb-20 md:mb-28">
                <div>
                    <h2 class="text-sm uppercase text-gray-500 font-bold mb-4">Services /</h2>
                    <h1 class="text-4xl md:text-5xl font-bold tracking-tight leading-tight">
                        Expert-led security services designed to provide unyielding resilience.
                    </h1>
                </div>
                <!-- Image Placeholder updated to use services.webp -->
                <div class="w-full h-80 bg-transparent rounded-lg flex items-center justify-center p-8">
                    <img src="/services.webp" alt="Services Element" class="w-full h-full object-contain" />
                </div>
            </div>

            <div class="border-t border-gray-300">
                {servicePackages.map((service, index) => (
                    <div class="border-b border-gray-300 py-8">
                        <div class="grid md:grid-cols-3 gap-4">
                            <div class="md:col-span-1">
                                <h3 class="text-xl font-bold">{service.title}</h3>
                            </div>
                             <div class="md:col-span-2">
                                <p class="text-gray-600">{service.description}</p>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </Content>
</BaseLayout>

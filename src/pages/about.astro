---
import BaseLayout from '@layouts/BaseLayout.astro';
import Content from '@components/Content.astro';
import HomeSection from '@components/HomeSection.astro'; // Using the consistent section component

// Updated and expanded content sections for a more comprehensive page.
const coreFocusAreas = [
    { 
        title: "Hardware & Embedded Systems", 
        text: "We analyze the circuit boards and firmware that power your devices, uncovering vulnerabilities at the silicon level that software-only assessments will always miss." 
    },
    { 
        title: "Physical Infrastructure", 
        text: "Our team tests the real-world security of your facilities, from locks and access controls to environmental defenses, simulating sophisticated intrusion attempts." 
    },
    { 
        title: "The Human Element", 
        text: "We assess the susceptibility of your staff to advanced social engineering and scams, providing actionable training to turn your weakest link into a line of defense." 
    },
    { 
        title: "Defensive Hardening", 
        text: "Beyond finding flaws, we help you fix them. Our expertise includes proactive blue team defense, detection engineering, and threat hunting to build a truly resilient security posture." 
    }
];

const labEquipment = [
    { category: "Soldering & Rework Stations", examples: "For fine-pitch component analysis and modification." },
    { category: "Test & Measurement Tools", examples: "Oscilloscopes and logic analyzers to observe and understand device behavior." },
    { category: "RF Hacking & Analysis", examples: "Software-Defined Radios (SDRs) to intercept and analyze wireless protocols." },
    { category: "Prototyping & Device Interaction", examples: "High-resolution 3D printers and JTAG/SWD debug probes for in-depth interaction." }
];

const ourEdgePoints = [
    { 
        title: "Decades of Experience", 
        text: "Founded by Chew Zhan Hong (Gabe), who brings an unparalleled 20 years of deep, hands-on experience in hardware hacking and security research, forming the technical bedrock of the firm." 
    },
    { 
        title: "Community-Driven Authority", 
        text: "Our unique strength is amplified by our community initiative, Cult of the LOLCOW (cLc), which establishes Behelit Systems as a leading authority in our field through collaborative, open-source research." 
    }
]
---
<BaseLayout 
    title="About"
    description="Learn about Behelit Systems, our mission, vision, and the global intelligence network that powers our advanced security services.">
    <Content>
        <div class="pt-28 md:pt-40">
            <!-- Main Title Section -->
            <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                <div>
                    <h2 class="text-sm uppercase text-gray-500 font-bold mb-4">About /</h2>
                    <h1 class="text-4xl md:text-5xl font-bold tracking-tight leading-tight">
                        We secure the critical assets that modern businesses are built onâ€”from silicon to staff.
                    </h1>
                </div>
                <div class="w-full h-80 bg-transparent rounded-lg flex items-center justify-center p-8">
                    <img src="/logo.webp" alt="Behelit Systems Logo" class="w-full h-full object-contain" />
                </div>
            </div>

            <!-- New Detailed Sections -->
            <div class="mt-20 md:mt-28">
                <HomeSection title="Our Philosophy">
                    <p class="text-2xl md:text-3xl font-bold leading-snug text-gray-800">
                        At our core, we sell two things: Trust and Expertise. We provide clients with the confidence that their operations are resilient enough to withstand a sophisticated, multi-faceted attack.
                    </p>
                </HomeSection>

                <HomeSection title="Our Core Disciplines">
                    <div class="border-t border-gray-300">
                        {coreFocusAreas.map((area) => (
                            <div class="border-b border-gray-300 py-6">
                                <h3 class="text-xl font-bold">{area.title}</h3>
                                <p class="text-gray-600 mt-2">{area.text}</p>
                            </div>
                        ))}
                    </div>
                </HomeSection>

                 <HomeSection title="The Lab">
                    <p class="text-lg text-gray-800 leading-relaxed mb-8 font-bold">
                        Our capabilities are backed by a professional-grade hardware lab equipped with the industry-standard tools required for deep analysis, reverse engineering, and product R&D.
                    </p>
                    <div class="border-t border-gray-300">
                        {labEquipment.map((item) => (
                            <div class="border-b border-gray-300 py-4">
                                <h4 class="font-bold text-md">{item.category}</h4>
                                <p class="text-sm text-gray-500">{item.examples}</p>
                            </div>
                        ))}
                    </div>
                </HomeSection>

                <HomeSection title="Our Edge">
                    <div class="border-t border-gray-300">
                        {ourEdgePoints.map((point) => (
                             <div class="border-b border-gray-300 py-6">
                                <h4 class="font-bold text-black text-xl">{point.title}</h4>
                                <p class="text-gray-700 mt-2 leading-relaxed">{point.text}</p>
                            </div>
                        ))}
                    </div>
                </HomeSection>
            </div>
        </div>
    </Content>
</BaseLayout>
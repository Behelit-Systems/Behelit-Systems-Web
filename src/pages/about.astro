---
import BaseLayout from '@layouts/BaseLayout.astro';
import Content from '@components/Content.astro';

// Consolidating the page content into an array for a cleaner structure.
const aboutPoints = [
    { 
        title: "Our Mission", 
        text: "To revolutionize our clients' security posture by uncovering and neutralizing critical vulnerabilities in hardware, physical infrastructure, and the human element, delivering unparalleled trust through proven expertise and superior tools." 
    },
    { 
        title: "Our Vision", 
        text: "To be the leading and most trusted authority in full-spectrum hardware and human-factor security in Southeast Asia, setting the global standard for adversarial simulation and defensive hardening." 
    },
    { 
        title: "The Founder", 
        text: "Founded by Chew Zhan Hong (Gabe), who brings an unparalleled 20 years of deep, hands-on experience in hardware hacking and security research. This unique combination of formal academic knowledge and two decades of practical expertise forms the technical and product-development bedrock of the firm." 
    }
];
---
<BaseLayout 
    title="About"
    description="Learn about Behelit Systems, our mission, vision, and the global intelligence network that powers our advanced security services.">
    <Content>
        <div class="max-w-5xl mx-auto pt-28 md:pt-40">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center mb-20 md:mb-28">
                <!-- Text Content -->
                <div>
                    <h2 class="text-sm uppercase text-gray-500 font-bold mb-4">About /</h2>
                    <h1 class="text-4xl md:text-5xl font-bold tracking-tight leading-tight">
                        We secure the critical assets that modern businesses are built onâ€”from silicon to staff.
                    </h1>
                </div>
                <!-- Image Placeholder updated to use a transparent background -->
                <div class="w-full h-80 bg-transparent rounded-lg flex items-center justify-center p-8">
                    <img src="/logo.webp" alt="Behelit Systems Logo" class="w-full h-full object-contain" />
                </div>
            </div>

            <div class="border-t border-gray-300">
                {aboutPoints.map((point, index) => (
                    <div class="border-b border-gray-300">
                        <div class="grid grid-cols-[1fr_auto] grid-rows-[auto_auto] items-center gap-x-4 py-8">
                            <h2 class="text-2xl md:text-3xl font-bold col-start-1 row-start-1">{point.title}</h2>
                            <p class="text-gray-700 mt-2 leading-relaxed col-start-1 row-start-2">{point.text}</p>
                            <span class="text-xs text-gray-400 col-start-2 row-start-1 row-span-2 justify-self-end self-start pt-2">0{index + 1}</span>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </Content>
</BaseLayout>
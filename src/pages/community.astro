---
import BaseLayout from '@layouts/BaseLayout.astro';
import Content from '@components/Content.astro';

// New content structure focusing on the community's benefits to clients.
const communityPoints = [
    { 
        title: "Driving Innovation", 
        text: "The cLc community acts as our open-source R&D engine, keeping our team at the absolute forefront of emerging hardware threats and exploitation techniques." 
    },
    { 
        title: "Cultivating Expertise", 
        text: "We identify and nurture the brightest minds in hardware security, ensuring our consulting team is composed of the most dedicated and knowledgeable experts in the field." 
    },
    { 
        title: "Demonstrating Authority", 
        text: "Our leadership and contributions within the community build unparalleled trust and transparently demonstrate our deep expertise in a way no corporate brochure ever could." 
    }
];
---
<BaseLayout 
    title="Community"
    description="Join the Cult of the LOLCOW (cLc), a free, open-source hardware hacking community by Behelit Systems.">
    <Content>
        <div class="max-w-5xl mx-auto pt-28 md:pt-40">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center mb-20 md:mb-28">
                <div>
                    <h2 class="text-sm uppercase text-gray-500 font-bold mb-4">Community /</h2>
                    <h1 class="text-4xl md:text-6xl font-bold tracking-tight leading-tight mb-4">Cult of the LOLCOW (cLc)</h1>
                    <p class="text-lg text-gray-600 mb-8">
                        Our unique strength is amplified by our community initiative. It's how we stay sharp, cultivate talent, and give back to the security ecosystem.
                    </p>
                    {/* CTA Button is now part of the hero section */}
                    <a href="http://www.cultlolcow.com" target="_blank" rel="noopener noreferrer" class="inline-block px-8 py-3 border border-black rounded-full text-sm font-bold text-black bg-transparent hover:bg-black hover:text-white transition-colors uppercase">
                        Visit the cLc Website
                    </a>
                </div>
                <!-- Image Placeholder updated to use clc-logo.webp -->
                <div class="w-full h-80 bg-transparent rounded-lg flex items-center justify-center p-8">
                    <img src="/clc-logo.webp" alt="Cult of the LOLCOW Logo" class="w-full h-full object-contain" />
                </div>
            </div>

            {/* Redesigned sections using the consistent grid system from other pages */}
            <div class="border-t border-gray-300">
                {communityPoints.map((point, index) => (
                    <div class="border-b border-gray-300">
                        <div class="grid grid-cols-[1fr_auto] grid-rows-[auto_auto] items-center gap-x-4 py-8">
                            <h2 class="text-2xl md:text-3xl font-bold col-start-1 row-start-1">{point.title}</h2>
                            <p class="text-gray-700 mt-2 leading-relaxed col-start-1 row-start-2">{point.text}</p>
                            <span class="text-xs text-gray-400 col-start-2 row-start-1 row-span-2 justify-self-end self-start pt-2">0{index + 1}</span>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </Content>
</BaseLayout>
---
import BaseLayout from '@layouts/BaseLayout.astro';
import Content from '@components/Content.astro';
const events = [
    { title: "Workshop: Intro to Firmware Reverse Engineering", date: "Q4 2025", type: "Workshop" },
    { title: "CTF: The LOLCOW Challenge", date: "Q1 2026", type: "CTF" },
];
---
<BaseLayout 
    title="Community"
    description="Join the Cult of the LOLCOW (cLc), a free, open-source hardware hacking community by Behelit Systems.">
    <Content>
        <div class="max-w-5xl mx-auto pt-20">
            <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-4">Cult of the LOLCOW (cLc)</h1>
            <p class="text-lg text-gray-600 max-w-2xl mb-12">A free, open-source hardware hacking community fostering collaborative research, cultivating next-generation talent, and championing responsible e-waste repurposing.</p>
            
            <h2 class="text-sm uppercase text-gray-500 mb-4 mt-16">Upcoming Events</h2>
            <div class="border-t border-gray-300">
                {events.map((event) => (
                    <div class="border-b border-gray-300 py-4 flex justify-between items-center">
                        <h3 class="text-xl font-bold">{event.title}</h3>
                        <p class="text-sm text-gray-500">{event.date}</p>
                    </div>
                ))}
            </div>
        </div>
    </Content>
</BaseLayout>

---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/Hero.astro';
import Content from '@components/Content.astro';
import HomeSection from '@components/HomeSection.astro';
import ContactBanner from '@components/ContactBanner.astro';
import ServiceCard from '@components/ServiceCard.astro';

// Updated services with clearer titles and subtext for the homepage.
const services = [
    { title: "The Sentinel Assessment", description: "Foundational Security Overview" },
    { title: "The Spectre Engagement", description: "Simulated Real-World Attack" },
    { title: "The Aegis Partnership", description: "Continuous Security Improvement" },
    { title: "The Chimera Project", description: "Bespoke Security Solutions" },
];
---
<BaseLayout 
    title="Home" 
    description="Behelit Systems: Premier firm for full-spectrum hardware security, physical penetration testing, and advanced social engineering.">
    
    <Hero />

    <Content>
        <HomeSection title="About">
            <h2 class="text-4xl md:text-5xl font-bold leading-tight tracking-tight mb-6">
                We secure the critical assets that modern businesses are built onâ€”from silicon to staff.
            </h2>
            <p class="text-lg text-gray-700 leading-relaxed">
                What we sell is trust and expertise. By combining two decades of hands-on experience with a focus on the hardware, physical, and human-factor vulnerabilities that others miss, we provide clients with the confidence that their operations are resilient enough to withstand sophisticated, multi-faceted attacks.
            </p>
        </HomeSection>

        <HomeSection title="Services">
             <div class="service-cards-grid">
                {services.map((service) => (
                    <a href="/services" class="card-link">
                        <ServiceCard title={service.title} description={service.description} />
                    </a>
                ))}
            </div>
        </HomeSection>

        <HomeSection title="Community">
             <h2 class="text-4xl md:text-5xl font-bold leading-tight tracking-tight mb-6">
                Our unique strength is amplified by our community initiative, Cult of the LOLCOW (cLc).
             </h2>
            <p class="text-lg text-gray-700 leading-relaxed mb-8">
                The cLc community acts as our open-source R&D engine, keeping our team at the absolute forefront of emerging hardware threats. It's how we stay sharp, cultivate top-tier talent, and transparently demonstrate our expertise.
            </p>
            <a href="/community" class="text-sm font-bold uppercase hover:text-gray-500 border-b border-black">Learn More about cLc</a>
        </HomeSection>
    </Content>
    
    <ContactBanner />
</BaseLayout>

<style>
.service-cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    perspective: 1000px; /* This is required for the 3D effect on the cards */
}
.card-link {
    text-decoration: none;
    color: inherit;
    height: 100%;
}
.card-link > div {
    height: 100%;
}
</style>
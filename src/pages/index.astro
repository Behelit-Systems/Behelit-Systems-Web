---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/Hero.astro';
import Content from '@components/Content.astro';
import HomeSection from '@components/HomeSection.astro';
import ContactBanner from '@components/ContactBanner.astro'; // Importing the new component

// Data for the services list
const services = [
    { title: "Hardware Security", description: "Firmware analysis, embedded systems, wireless protocols." },
    { title: "Physical Penetration", description: "Access control bypass, facility assessments, intrusion simulation." },
    { title: "Social Engineering", description: "Phishing campaigns, human vulnerability assessments, scambaiting." },
    { title: "Blue Team Defense", description: "Detection engineering, threat hunting, incident response." },
];
---
<BaseLayout 
    title="Home" 
    description="Behelit Systems: Premier firm for full-spectrum hardware security, physical penetration testing, and advanced social engineering.">
    
    <Hero />

    <Content>
        <!-- About Section -->
        <HomeSection title="About">
            <p class="text-2xl md:text-3xl font-medium leading-snug">
                Behelit Systems is Malaysia's premier firm specializing in full-spectrum hardware security, aggressive physical penetration testing, and advanced social engineering. We are dedicated to engineering unyielding resilience from silicon to people.
            </p>
        </HomeSection>

        <!-- Services Section -->
        <HomeSection title="Services">
            <div class="border-t border-gray-300">
                {services.map((service, index) => (
                    <div class="border-b border-gray-300 py-6 group">
                        <a href="/services" class="flex justify-between items-center w-full">
                            <div class="flex items-center">
                                <span class="text-xs text-gray-400 mr-4 w-6">0{index+1}</span>
                                <h3 class="text-2xl md:text-4xl font-bold group-hover:text-gray-500 transition-colors">{service.title}</h3>
                            </div>
                            <p class="hidden md:block text-sm text-gray-500 text-right">{service.description}</p>
                        </a>
                    </div>
                ))}
            </div>
        </HomeSection>

        <!-- Community Section -->
        <HomeSection title="Community">
             <h3 class="text-2xl md:text-3xl font-medium leading-snug mb-4">Cult of the LOLCOW (cLc)</h3>
            <p class="text-gray-600 mb-6">
                A free, open-source hardware hacking community fostering collaborative research, cultivating next-generation talent, and championing responsible e-waste repurposing.
            </p>
            <a href="/community" class="text-sm font-bold uppercase hover:text-gray-500 border-b border-black">Learn More</a>
        </HomeSection>
    </Content>
    
    <!-- New Contact Banner Section -->
    <ContactBanner />

</BaseLayout>
